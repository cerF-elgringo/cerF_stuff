    <div id="question">Should cerF learn to code?</div>
    <input id="entry" type="text" placeholder="Press Enter" />
    <div id="output"></div>

    <py-script>
from js import document

entry = document.getElementById("entry")
output = document.getElementById("output")
question = document.getElementById("question")

def show_pamp(event):
    question.style.display = "none"
    entry.style.display = "none"
    output.innerHTML = "PAMP GLABS"

entry.addEventListener("keydown", lambda e: show_pamp(e) if e.key == "Enter" else None)
    </py-script>
